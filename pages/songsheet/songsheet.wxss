.head {
  padding: 60rpx 0;
  background-color: #88FFFD;
}

.head .cover {
  height: 264rpx;
  position: relative;
}

.head .cover .cover-img {
  width: 264rpx;
  height: 264rpx;
  position: absolute;
  left: 28rpx;
  top: 0;
}

.head .cover .cover-img .playcount {
  width: 254rpx;
  height: 34rpx;
  font-size: 20rpx;
  text-align: right;
  line-height: 34rpx;
  padding-right: 10rpx;
  background-image: linear-gradient(90deg,transparent,rgba(0,0,0,.2));
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
}
.head .cover .cover-img .redtab {
  width: 74rpx;
  height: 32rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 32rpx;
  background-color: #DE524B;
  color: #fff;
  border-top-right-radius: 34rpx;
  border-bottom-right-radius: 34rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
}

.head .cover .right-box {
  width: 414rpx;
  position: absolute;
  left: 324rpx;
  top: 0;
}

.head .cover .right-box .songsheet-name {
  width: 414rpx;
  font-size: 34rpx;
}

.head .cover .right-box .creator {
  height: 56rpx;
  overflow: hidden;
  margin-top: 30rpx;
}

.head .cover .right-box .creator .creator-box {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  position: relative;
  float: left;
}

.head .cover .right-box .creator .creator-box .creator-img {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
}

.head .cover .right-box .creator .creator-box .creator-logo {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.head .cover .right-box .creator .creator-name {
  height: 56rpx;
  font-size: 26rpx;
  line-height: 56rpx;
  padding-left: 10rpx;
  float: left;
}

/* ----------------------------------------------------- */

.tags {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}

.tags text {
  margin-right: 20rpx;
  padding: 1rpx 16rpx;
  font-size: 24rpx;
  border-radius: 50rpx;
  text-align: center;
  border: 1rpx solid rgba(0,0,0,.1);
}

.description {
  overflow: hidden;
  height: 130rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.description_0 {
  overflow: visible;
  height: auto;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.description .arrow {
  width: 25rpx;
  height: 12rpx;
  position: absolute;
  bottom: 0;
  right: 30rpx;
}